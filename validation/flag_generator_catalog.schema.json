{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/core-topo-gen/flag_generator_catalog.schema.json",
  "title": "Flag Generator Catalog",
  "description": "Schema for generator-catalog JSON files under data_sources/flag_generators and data_sources/flag_node_generators.",
  "oneOf": [
    {
      "title": "Catalog v1",
      "type": "object",
      "required": ["schema_version", "generators"],
      "properties": {
        "schema_version": {"const": 1},
        "generators": {"type": "array", "items": {"$ref": "#/$defs/generatorV1"}}
      },
      "additionalProperties": false
    },
    {
      "title": "Catalog v2",
      "type": "object",
      "required": ["schema_version", "generators"],
      "properties": {
        "schema_version": {"const": 2},
        "generators": {"type": "array", "items": {"$ref": "#/$defs/generatorV2"}}
      },
      "additionalProperties": false
    }
  ],
  "$defs": {
    "source": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {"type": "string"},
        "path": {"type": "string"},
        "ref": {"type": "string"},
        "subpath": {"type": "string"},
        "entry": {"type": "string"}
      },
      "additionalProperties": true
    },
    "compose": {
      "type": "object",
      "required": ["file", "service"],
      "properties": {
        "file": {"type": "string"},
        "service": {"type": "string"}
      },
      "additionalProperties": false
    },
    "io": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "type": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "required": {"type": "boolean"},
        "sensitive": {"type": "boolean"},
        "default": {}
      },
      "additionalProperties": true
    },
    "handoff": {
      "type": "object",
      "description": "Optional structured metadata a participant can use to move to the next step.",
      "properties": {
        "hints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["text"],
            "properties": {
              "text": {"type": "string"},
              "kind": {"type": "string", "description": "e.g. next-step|credentials|address|file"},
              "sensitive": {"type": "boolean"}
            },
            "additionalProperties": true
          }
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "protocol": {"type": "string", "description": "ssh|https|http|nfs|tcp|udp|custom"},
              "host_hint": {"type": "string", "description": "e.g. node name/id or DNS name"},
              "port": {"type": "integer"},
              "path": {"type": "string"},
              "uri": {"type": "string"}
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "generatorV1": {
      "type": "object",
      "required": ["id", "name", "language", "source", "outputs"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "version": {"type": "string"},
        "tags": {"type": "array", "items": {"type": "string"}},
        "language": {"type": "string", "enum": ["python", "c", "cpp"]},
        "source": {"$ref": "#/$defs/source"},
        "compose": {"$ref": "#/$defs/compose"},
        "env": {"type": "object", "additionalProperties": {"type": "string"}},
        "build": {"type": "object"},
        "run": {"type": "object"},
        "inputs": {"type": "array", "items": {"$ref": "#/$defs/io"}},
        "outputs": {"type": "array", "minItems": 1, "items": {"$ref": "#/$defs/io"}},
        "provides": {"type": "array", "items": {"type": "string"}},
        "hint_template": {"type": "string"},
        "handoff": {"$ref": "#/$defs/handoff"}
      },
      "additionalProperties": true
    },
    "generatorV2": {
      "allOf": [
        {"$ref": "#/$defs/generatorV1"},
        {
          "type": "object",
          "required": ["hint_template"],
          "properties": {
            "hint_template": {"type": "string", "minLength": 1}
          }
        }
      ]
    }
  }
}
