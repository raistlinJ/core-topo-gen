{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.invalid/core-topo-gen/flag_generator_catalog.schema.json",
  "title": "Flag Generator Catalog",
  "description": "Schema for generator-catalog JSON files under data_sources/flag_generators and data_sources/flag_node_generators.",
  "type": "object",
  "required": ["schema_version", "plugin_type", "plugins", "implementations"],
  "properties": {
    "schema_version": {"const": 3},
    "plugin_type": {
      "type": "string",
      "enum": ["flag-generator", "flag-node-generator"]
    },
    "plugins": {
      "type": "array",
      "items": {"$ref": "#/$defs/plugin"}
    },
    "implementations": {
      "type": "array",
      "items": {"$ref": "#/$defs/implementation"}
    }
  },
  "additionalProperties": false,
  "$defs": {
    "artifactRef": {
      "type": "object",
      "required": ["artifact"],
      "properties": {
        "artifact": {"type": "string", "minLength": 1},
        "description": {"type": "string"}
      },
      "additionalProperties": true
    },
    "inputSpec": {
      "type": "object",
      "properties": {
        "type": {"type": "string"},
        "description": {"type": "string"},
        "required": {"type": "boolean"},
        "sensitive": {"type": "boolean"},
        "default": {}
      },
      "additionalProperties": true
    },
    "plugin": {
      "type": "object",
      "required": ["plugin_id", "plugin_type", "version", "requires", "produces"],
      "properties": {
        "plugin_id": {"type": "string", "minLength": 1},
        "plugin_type": {"type": "string", "minLength": 1},
        "version": {"type": "string", "minLength": 1},
        "description": {"type": "string"},
        "requires": {"type": "array", "items": {"type": "string"}},
        "produces": {"type": "array", "items": {"$ref": "#/$defs/artifactRef"}},
        "inputs": {
          "type": "object",
          "additionalProperties": {"$ref": "#/$defs/inputSpec"}
        }
      },
      "additionalProperties": true
    },
    "source": {
      "type": "object",
      "required": ["type", "path"],
      "properties": {
        "type": {"type": "string"},
        "path": {"type": "string"},
        "ref": {"type": "string"},
        "subpath": {"type": "string"},
        "entry": {"type": "string"}
      },
      "additionalProperties": true
    },
    "compose": {
      "type": "object",
      "required": ["file", "service"],
      "properties": {
        "file": {"type": "string"},
        "service": {"type": "string"}
      },
      "additionalProperties": false
    },
    "handoff": {
      "type": "object",
      "description": "Optional structured metadata a participant can use to move to the next step.",
      "properties": {
        "hints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["text"],
            "properties": {
              "text": {"type": "string"},
              "kind": {"type": "string", "description": "e.g. next-step|credentials|address|file"},
              "sensitive": {"type": "boolean"}
            },
            "additionalProperties": true
          }
        },
        "endpoints": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "protocol": {"type": "string", "description": "ssh|https|http|nfs|tcp|udp|custom"},
              "host_hint": {"type": "string", "description": "e.g. node name/id or DNS name"},
              "port": {"type": "integer"},
              "path": {"type": "string"},
              "uri": {"type": "string"}
            },
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    },
    "implementation": {
      "type": "object",
      "required": ["plugin_id", "name", "language", "source"],
      "properties": {
        "plugin_id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1},
        "language": {"type": "string", "minLength": 1},
        "source": {"$ref": "#/$defs/source"},
        "compose": {"$ref": "#/$defs/compose"},
        "env": {"type": "object", "additionalProperties": {"type": "string"}},
        "build": {"type": "object"},
        "run": {"type": "object"},
        "hint_template": {
          "description": "Single hint template (legacy) or an ordered list of hint templates (most to least revealing).",
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        },
        "hint_templates": {
          "description": "Ordered list of hint templates (least to most revealing).",
          "type": "array",
          "items": {"type": "string"}
        },
        "handoff": {"$ref": "#/$defs/handoff"}
      },
      "additionalProperties": true
    }
  }
}
