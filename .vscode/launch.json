{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web UI: Run app_backend.py",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/webapp/app_backend.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "redirectOutput": true,
      "env": {
        "FLASK_ENV": "development",
        "CORE_HOST": "localhost",
        "CORE_PORT": "50051"
      },
      "envFile": "${workspaceFolder}/.env",
      "args": []
    },
    {
      "name": "Web UI: Flask (module)",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "FLASK_APP": "webapp/app_backend.py",
        "FLASK_ENV": "development",
        "CORE_HOST": "localhost",
        "CORE_PORT": "50051"
      },
      "envFile": "${workspaceFolder}/.env",
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "9090",
        "--host",
        "0.0.0.0"
      ]
    }
  ]
}
